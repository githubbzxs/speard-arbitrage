ARB_RECOMMENDED_LEVERAGES=2,2,2,2,2,2,2,2,2,2

# 策略参数
ARB_MA_WINDOW=120
ARB_STD_WINDOW=120
ARB_MIN_SAMPLES=60
ARB_Z_ENTRY=1.8
ARB_Z_EXIT=0.6
ARB_Z_ZERO_ENTRY=1.2
ARB_Z_ZERO_EXIT=0.3
ARB_MIN_EDGE_BPS=1.0
ARB_BASE_ORDER_QTY=0.001
